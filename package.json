{
	"name": "map-locator",
	"version": "0.0.2",
	"author": "Iv√°n Todorovich <ivantodorovich@gmail.com>",
	"description": "Locates contacts from a Google DB, and displays usefull information on them.",
	"repository": {
		"type": "git",
		"url":	"https://github.com/ivantodorovich/map-locator.git"
	},

	"dependencies":	{
		"sqlite3": "~2.2.1",
		"tedious": "*"
	},
	"devDependencies": {
		"node-webkit-builder": "*",
		"nodewebkit": "0.8.5"
	},
	"scripts": {
		"install":	"cp -p -R deps/sqlite3/* node_modules/sqlite3/lib/binding/",
		"start": "nodewebkit . -- --debug",
		"build": "node build.js"
	},

	"main": "app/index.html",
	"window": {
		"title":		"Geolocalizacion",
		"frame":		true,
		"toolbar":		false,
		"width":		800,
		"height":		600,
		"min_width":	800,
		"min_height":	600,
		"resizable":	true,
		"icon":			"app/img/icon.png"
	}
}
